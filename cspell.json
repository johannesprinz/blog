{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en-GB",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./dict/project-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["project-words"],
  "ignorePaths": [
    "node_modules",
    "src/layouts/**",
    "src/public/**",
    "src/resources/**",
    "src/themes/**",
    "dict/**"
  ]
}
